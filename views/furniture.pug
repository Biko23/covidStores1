        div.row
            div.col-12
                div.container
                    div.row
                        div.col-12
                            h3 SITTING ROOM FURNITURE
                            a(name="livingroom")
                        div.row
                            each product in products
                                if product.category == "livingroom"
                                    div.card
                                        img.ecardimg(src=('/' + product.productImage), alt="no mage", srcset="")
