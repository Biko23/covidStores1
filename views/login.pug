extends layout
block content
    div.container
        div.row
            div.col-3
            div.col-6
                header.card-header
                    h4.card-title Login  
                form(method="POST" action='/login')
                    div.form-row
                        div.col.form-group
                            label User name
                            input.form-control(name="username")
                    div.form-row
                        div.col.form-group
                            label Enter Password
                            input.form-control(type="password" name="password")
                    div.form-row
                        div.col.form-group
                            button.btn.btn-primary.btn-block.btnBrand Login
            div.col-3
                    